<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edtnhap"
        android:layout_width="337dp"
        android:layout_height="58dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="37dp"
        android:ems="10"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioGroup
        android:layout_width="82dp"
        android:layout_height="135dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="292dp"
        android:layout_marginRight="292dp"
        android:layout_marginBottom="148dp"
        app:layout_constraintBottom_toTopOf="@+id/ketqua"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtnhap"
        tools:ignore="MissingConstraints">

        <RadioButton
            android:id="@+id/rbtn13"
            android:layout_width="82dp"
            android:layout_height="45dp"
            android:text="13%"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn15"
            android:layout_width="82dp"
            android:layout_height="45dp"
            android:text="15%"
            android:textSize="18sp" />

        <RadioButton
            android:id="@+id/rbtn18"
            android:layout_width="82dp"
            android:layout_height="45dp"
            android:text="18%"
            android:textSize="18sp" />
    </RadioGroup>

    <Button
        android:id="@+id/btncal"
        android:layout_width="wrap_content"
        android:layout_height="57dp"
        android:layout_marginStart="159dp"
        android:layout_marginLeft="159dp"
        android:layout_marginTop="190dp"
        android:layout_marginEnd="57dp"
        android:layout_marginRight="57dp"
        android:text="Calulator your tip"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtnhap" />

    <TextView
        android:id="@+id/ketqua"
        android:layout_width="328dp"
        android:layout_height="62dp"
        android:layout_marginStart="37dp"
        android:layout_marginLeft="37dp"
        android:layout_marginTop="80dp"
        android:layout_marginBottom="278dp"
        android:gravity="center|left"
        android:text="Your tip will be"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btncal" />

</androidx.constraintlayout.widget.ConstraintLayout>